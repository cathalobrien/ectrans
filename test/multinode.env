#Test the performance of multiple nodes using a variable number of cpus per node

CPUS_PER_NUMA_REGION=16
CPUS_PER_SOCKET=64
CPUS_PER_NODE=128
NUM_THREADS=($CPUS_PER_NUMA_REGION $CPUS_PER_SOCKET $CPUS_PER_NODE)
#NUM_THREADS=($CPUS_PER_NODE)
NUM_NODES=(2)
NPROMA_SIZES=(256)

#set some runtime parameters
iterations=3

#openmp x mpi geometry (how many tasks vs threads will be used)
THREAD_TASK_RATIO=(4) #4 is the best on atos bc they share an L3 cache

#The different builds to be benchmarked
ARCH_FILES=("atos/intel_hpcx" "atos/gnu_hpcx")

#The different precisions to be tested.
#possible values: sp, dp
PRECISIONS=("sp" "dp")

#runtime parameters (could make these a list in the future if you wanted to do weak scaling tests)
truncation=1279 #48r1 parameters
freq=412
